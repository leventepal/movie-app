<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:background="#CCC"
            android:hint="0"
            android:textSize="50sp"
            android:gravity="center_vertical|end"
            android:padding="4dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#373737"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_mult"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="x"
                    android:textSize="25sp"
                    android:backgroundTint="@color/calc_func_button_background_color"
                    android:textColor="@color/calc_func_button_text_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/id_subs"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:backgroundTint="@color/calc_func_button_background_color"
                    android:textSize="25sp"
                    android:textColor="@color/calc_func_button_text_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_sum"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:backgroundTint="@color/calc_func_button_background_color"
                    android:textSize="25sp"
                    android:textColor="@color/calc_func_button_text_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:text="0"
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_dec"
                    android:layout_width="0dp"
                    android:text="."
                    android:backgroundTint="@color/calc_button_background_color"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_result"
                    android:layout_width="0dp"
                    android:text="="
                    android:backgroundTint="@color/calc_func_button_background_color"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:textColor="@color/calc_func_button_text_color"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>